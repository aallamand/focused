<div class="navbar-focused">
  <!-- Logo -->
  <%= link_to root_path, class: "" do %>
    <div class="navbar-focused-brand">
      <%= image_tag "logo.png", height: 45 %>
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-focused-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "expertises", "#expertises", class: "navbar-focused-item navbar-focused-link" %>
      <%= link_to "réalisation", "#realisations", class: "navbar-focused-item navbar-focused-link" %>
      <%= mail_to "contact@focused.fr", "contact", subject: "Demande de devis", class: "navbar-focused-item navbar-focused-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-focused-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/aallamand", class: "avatar dropdown-toggle", id: "navbar-focused-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-focused-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "expertises", "#expertises", class: "navbar-focused-item navbar-focused-link" %>
      <%= link_to "réalisations", "#realisations", class: "navbar-focused-item navbar-focused-link" %>
      <%= mail_to "contact@focused.fr", "contact", subject: "Demande de devis", class: "navbar-focused-item navbar-focused-link" %>
      <%#= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-focused-item navbar-focused-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-focused-item hidden-md hidden-lg">
    <div class="dropdown">
      <button class="hamburger hamburger--minus dropdown-toggle" type="button" data-toggle="dropdown" id="hamburger--minus">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right navbar-focused-dropdown-menu">
        <li><%= link_to "expertises", "#expertises" %></li>
        <li><%= link_to "réalisations", "#realisations" %></li>
        <li><%= link_to "contact", "#contact" %></li>
      </ul>
    </div>
  </div>
</div>

